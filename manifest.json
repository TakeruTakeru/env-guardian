{
    "manifest_version": 3,
    "name": "Env Guardian",
    "version": "1.1",
    "description": "Provides warnings based on the website being viewed.",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "*://*/*"
    ],
    "action": {
        "default_popup": "options.html",
        "default_icon": {
            "16": "icons/icon_16x16.jpg",
            "48": "icons/icon_48x48.jpg",
            "128": "icons/icon_128x128.jpg"
        }
    },
    "icons": {
        "16": "icons/icon_16x16.jpg",
        "48": "icons/icon_48x48.jpg",
        "128": "icons/icon_128x128.jpg"
    },
    "options_page": "options.html"
}